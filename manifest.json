{
  "manifest_version": 3,
  "name": "HOST Lançar Horas",
  "version": "1.0.2",
  "description": "Lançamento de horas para o sistema HOST",
  "icons": {
  	"16": "host.png",
    "48": "host.png",
    "128": "host.png"
  },
  "background": {
    "service_worker" : "background.js"
  },
  "action": {
    "default_title": "HOST Lançar Horas",
    "default_icon": "host.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources" : [{
    "resources": ["fill_hours.js", "content.js", "injected.js", "background.js"],
    "matches": ["*://*.globalhitss.com/*"]
  }],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "content_security_policy": {
    "script-src": "self"
  },
  "content_scripts": [
    {
      "matches": ["*://*.globalhitss.com/*"],
      "js": ["content.js"]
    }
  ]
}